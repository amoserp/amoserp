    <record model="ir.ui.view" id="odoo_is_test_list">
        <field name="name">检验是否合格</field>
        <field name="model">stock.move</field>
        <field name="arch" type="xml">

            <tree string="库存分析" delete="0" create="0"  decoration-info="is_test ==True">
                <field name="code"/>
                <field name="scheduled_date" readonly='1' string="归还日期" widget="date"/>
                <field name="other_id" readonly='1' string="送检人"/>
                <field name="user_id" readonly='1' string="物资管理员"/>
                <field name="name" invisible='1'/>
                <field name="product_id" readonly='1' />
                <field name="product_uom" readonly='1'/>
                <field name="product_uom_qty" readonly='1' sum="合计"/>
                <field name="warehouse_id" readonly='1'/>
                <field name="type" readonly='1'/>
                <field name="note" readonly='0'/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="state" invisible='1'/>
                <field name="is_test"/>
                <button name='button_is_test'  string='不合格' attrs="{'invisible': [('is_test', '=', False)]}"  type='object' class='oe_highlight'/>
                <button name='button_is_test'  string='合格' attrs="{'invisible': [('is_test', '=', True)]}" type='object' class='oe_highlight'/>
            </tree>
